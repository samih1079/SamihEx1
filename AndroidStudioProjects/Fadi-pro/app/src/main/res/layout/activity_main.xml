<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#fbffe3"
    android:backgroundTint="#fbffe3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/mail"
        android:textSize="30dp"
        android:textColor="#010101"
        android:layout_above="@+id/etmail1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="7dp"
        android:layout_height="50dp"
        android:id="@+id/etmail1"
        android:layout_above="@+id/etPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="none"
        android:background="#14fdff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/tvPass"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#010001"
        android:textSize="30dp" />

    <EditText
        android:layout_width="7dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPass"
        android:layout_x="94dp"
        android:layout_y="53dp"
        android:background="#14fdff"
        android:layout_below="@+id/tvPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:phoneNumber="false"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btn"
        android:background="#14fdff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etPass"
        android:layout_alignEnd="@+id/etPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/SignUpB"
        android:layout_alignBottom="@+id/btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tvPass"
        android:layout_toStartOf="@+id/tvPass" />

</RelativeLayout>
