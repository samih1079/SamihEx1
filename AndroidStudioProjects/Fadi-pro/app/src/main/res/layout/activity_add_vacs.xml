<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fadi_pro.fadi_pro.AddVACsActivity"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vaccnations"
        android:id="@+id/etVaccinatoins"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etAnimalName"
        android:hint="name"
        android:layout_below="@+id/etVaccinatoins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext2"
        android:text="NExt"
        android:background="#14fdff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/etgoal"
        android:layout_alignEnd="@+id/etgoal"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave2"
        android:layout_above="@+id/btnNext2"
        android:layout_alignRight="@+id/etVaccinatoins"
        android:layout_alignEnd="@+id/etVaccinatoins"
        android:background="#14fdff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etgoal"
        android:layout_below="@+id/etAnimalName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etAnimalName"
        android:layout_alignEnd="@+id/etAnimalName"
        android:hint="goal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPrice"
        android:layout_below="@+id/etgoal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etgoal"
        android:layout_alignEnd="@+id/etgoal"
        android:hint="price" />


</RelativeLayout>
