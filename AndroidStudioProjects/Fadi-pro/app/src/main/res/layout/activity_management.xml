<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fadi_pro.fadi_pro.Management"
    android:backgroundTint="#77000000"
    android:backgroundTintMode="src_over"
    android:background="@drawable/vet">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animal Management"
        android:id="@+id/CMbtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="#14ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaccination Management"
        android:id="@+id/CMVACbtn"
        android:layout_below="@+id/CMbtn"
        android:layout_alignLeft="@+id/CMbtn"
        android:layout_alignStart="@+id/CMbtn"
        android:layout_marginTop="64dp"
        android:layout_alignRight="@+id/CMbtn"
        android:layout_alignEnd="@+id/CMbtn"
        android:background="#14ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turns"
        android:id="@+id/TRNbtn"
        android:layout_below="@+id/CMVACbtn"
        android:layout_alignLeft="@+id/CMVACbtn"
        android:layout_alignStart="@+id/CMVACbtn"
        android:layout_marginTop="61dp"
        android:layout_alignRight="@+id/CMVACbtn"
        android:layout_alignEnd="@+id/CMVACbtn"
        android:background="#14ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/BtnNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
